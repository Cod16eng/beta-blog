      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :username %>
    <%= form.text_field :username, autofocus: true %>
  </div>

  <div class="input-field">
    <%= form.label :email %>
    <%= form.text_field :email, autofocus: true %>
  </div>

  <div class="input-field">
    <%= form.label :password %>
    <%= form.password_field :password, autofocus: true %>
  </div>

  <div class="input-field">
    <%= form.button 'Create Article', class: 'waves-effect waves-light btn-small' %>
  </div>
<% end %>
