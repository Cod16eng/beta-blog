<h2 class="center-align">Listing all Articles</h2>
<div class="row">
  <div class="col s8 offset-s2">
    <p>
      <%= link_to '<i class="material-icons">add</i>'.html_safe,
      new_article_path, class:'right btn-floating waves-effect waves-light green btn tooltipped',
      "data-toggle" => "tooltip", "data-position"=>"top", 'data-tooltip'=>"New Article" %>
    </p>
    <p class="clearfix"></p><br>
    <% if @articles.any? %>
      <% @articles.each do |art| %>
        <div class="col s12">
          <div class="card horizontal">
            <div class="card-image">
              <%= image_tag 'desert_oasis_190.png' %>
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title"><%= art.title %></span>
                <p><%= art.desc.truncate_words(20) %></p>
              </div>
              <div class="row">
                <span class="card-action col s6 left">Created by: <%= art.user.username if art.user %>, <%=time_ago_in_words(art.created_at)%> ago</span>
                <div class="card-action col s6 right">
                  <%= link_to '<i class="material-icons">create</i>'.html_safe, edit_article_path(art),
                  class:'btn-floating waves-effect waves-light green btn right btn-sp' %>
                  <%= link_to '<i class="material-icons">visibility</i>'.html_safe, article_path(art),
                  class:'btn-floating waves-effect waves-light blue btn right btn-sp' %>
                  <%= link_to '<i class="material-icons">close</i>'.html_safe, article_path(art), method: :delete, data: {confirm: 'Are you sure'},
                  class:'btn-floating waves-effect waves-light red btn right btn-sp' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
 </div>
</div>
