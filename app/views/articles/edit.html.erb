<h1>Edit Article</h1>

<br>
<div class="row">
  <div class="col s8 offset-s2">
    <% if @article.errors.any? %>
    <h3>Errors</h3>
      <ul class="collection">
        <% @article.errors.full_messages.each do |msg| %>
          <li class="collection-item red white-text"><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
    <br>
    <%= form_for @article do |f| %>
      <div class="input-field">
        <%= f.label :title %><br>
        <%= f.text_field :title, placeholder: "Tiltle" %>
      </div>
      <div class="input-field">
        <%= f.label :desc %><br>
        <%= f.text_area :desc, id:"textarea1", placeholder: "Description" , class:"materialize-textarea" %>
      </div>

      <div class="input-field">
        <%= f.submit 'Update Article', class: 'waves-effect waves-light btn-small right' %>  <br>
        </div>
    <% end %>
    <div class="col s6">
      <%= link_to '<i class="material-icons">arrow_back</i>'.html_safe, articles_path, class:'btn-floating waves-effect waves-light grey btn tooltipped',
      "data-toggle" => "tooltip", "data-position"=>"bottom", 'data-tooltip'=>"Back to Articles" %></td>
    </div>

  </div>
